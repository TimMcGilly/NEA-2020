{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "vuejs: chrome",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/frontend/src",
        "breakOnLoad": true,
        "sourceMapPathOverrides": {
            "webpack:///src/*.vue": "${webRoot}/*.vue",
            "webpack:///./src/*.js": "${webRoot}/*.js"
         }
      },
      {
        "type": "firefox",
        "request": "launch",
        "name": "vuejs: firefox",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/frontend/src",
        "pathMappings": [{ "url": "webpack:///src/", "path": "${webRoot}/" }]
      }
    ]
  }